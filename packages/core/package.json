{
    "name": "@repo/core",
    "version": "0.0.0",
    "private": true,
    "license": "MIT",
    "sideEffects": [
      "**/*.css"
    ],
    "files": [
      "dist/**"
    ],
    "exports": {
      ".": {
        "require": "./dist/index.js",
        "import": "./dist/index.mjs",
        "types": "./src/index.tsx"
      },
      "./styles.css": "./dist/index.css"
    },
    "scripts": {
      "build": "tsup && tailwindcss -i ./src/styles.css -o ./dist/index.css",
      "clean": "rm -rf dist",
      "dev": "tsup --watch & tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
      "typecheck": "tsc --noEmit",
      "lint": "eslint src/",
      "test": "jest"
    },
    "peerDependencies": {
      "react": "^18.2.0"
    },
    "jest": {
      "preset": "@repo/jest-presets/browser"
    },
    "dependencies": {
        "react-icons": "^5.3.0",
        "lucide-react": "^0.451.0"
      },
    "devDependencies": {
      "@types/jest": "^29.5.12",
      "@types/node": "^20.11.24",
      "@types/react": "^18.2.62",
      "@types/react-dom": "^18.2.19",
      "autoprefixer": "^10.4.18",
      "postcss": "^8.4.35",
      "tailwindcss": "^3.4.1",
      "jest": "^29.7.0",
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "tsup": "^8.0.2",
      "typescript": "^5.3.3"
    }
  }
  